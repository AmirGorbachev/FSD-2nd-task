extends ../../templates/template.pug

block head
  title Room details
  
block body
  header
  +header-nav({ 
    authorization:"unauthorized",
    menu: [ {name: "О нас"},
            {name: "Услуги", expandable: true},
            {name: "Вакансии"},
            {name: "Новости"},
            {name: "Соглашения", expandable: true}
    ],
    login: "Войти",
    register: "Зарегистрироваться"
    })
  main
    .main__photos
      .main__photos-first
      .main__photos-second
        .main__photos-small-first
        .main__photos-small-second
    .main__wrapper
      .main__inner
        .main__content
          .main__about
            .main__data
              h2.main__data-caption Сведения о номере
              +card-conditions("mood", "Комфорт", "Шумопоглащающие стены")
              +card-conditions("location_city", "Удобство", "Окно в каждой из спален")
              +card-conditions("whatshot", "Уют", "Номер оснащён камином", true)
            .main__impressions
              h2.main__impressions-caption Впечатления от номера
              .main__chart
                +chart(130, 65, 65, 0)
          .main__review
            .main__review-wrapper
              h2.main__review-caption Отзывы посетителей номера
              p.main__review-amount 2 отзыва
            +review({
              name: "Мурад Сарафанов",
              time: "5 дней назад",
              content: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподовляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
              likes: "12",
              btnLikeActive: true,
              photo: "photo-example.jpg"})
            +review({
              name: "Патрисия Стёклышкова",
              time: "Неделю назад",
              content: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент",
              likes: "2",
              btnLikeActive: false,
              photo: "photo-example2.jpg"})
          .main__rules-and-cancel
            .main__rules
              h2.main__rules-caption Правила
              +bullet("Нельзя с питомцами")
              +bullet("Без вечеринок и мероприятий")
              +bullet("Время прибытия — после 13:00, а выезд до 12:00")
            .main__cancel
              h2.main__cancel-caption Отмена
              p Бесплатная смена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги. 
        .main__form
          +reservation({
            number: "888",
            lux: true,
            dayCost: "9 990₽",
            dateDropdownIdFirst: "dateDropdownRes1",
            dateDropdownIdSecond: "dateDropdownRes2",
            services: [ {name: "9 990₽ x 4 суток", info: false, cost: "39 960₽"},
                        {name: "Сбор за услуги: скидка 2 179₽", info: true, cost: "0₽"},
                        {name: "Сбор за дополнительные услуги", info: true, cost: "300₽"}
            ],
            result: "38 081₽"
          })
  footer
    .footer-main
      +footer-nav({ 
        aboutCompany:"Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»",
        header1: "Навигация",
        menu1: [
          {name: "О нас"},
          {name: "Новости"},
          {name: "Служба поддержки"},
          {name: "Услуги"}
        ],
        header2: "О нас",
        menu2: [
          {name: "О сервисе"},
          {name: "Наша команда"},
          {name: "Вакансии"},
          {name: "Инвесторы"}
        ],
        header3: "Служба поддержки",
        menu3: [
          {name: "Соглашения"},
          {name: "Сообщества"},
          {name: "Связь с нами"}
        ],
        subsribeHeader: "Подписка",
        subsribeText: "Получайте специальные предложения и новости сервиса",
        placeholder: "Email",
        copyright: "Copyright © 2018 Toxin отель. Все права защищены."
        })
    .footer-mobile
      +footer("Copyright © 2018 Toxin отель. Все права защищены.")