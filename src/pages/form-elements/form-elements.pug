          input.text-field(type="text", placeholder="This is pretty awesome")
      .block
        h3.block__name Date dropdown
        .block__content
          input.text-field(type="text", placeholder="This is pretty awesome")
      .block
        h3.block__name Filter date dropdown
        .block__content
          input.text-field(type="text", placeholder="This is pretty awesome")
      .block
        h3.block__name Subscription text field
        .block__content
          input.text-field(type="email", placeholder="Email")
    .top-block-group__second-column
      .block
        h3.block__name Checkbox buttons
        .block__content
          +checkbox-button("Можно курить")
          +checkbox-button("Можно с питомцами", "checked")
          +checkbox-button("Можно пригласить гостей (до 10 человек)", "checked")
      .block
        h3.block__name Radio buttons
        .block__content
          +radio-button("gender", "male", "Мужчина", "checked")
          +radio-button("gender", "female","Женщина")
      .block
        h3.block__name Toggle
        .block__content
          +toggle
      .block.block--like
        h3.block__name Like button
        .block__content
          +like-button(2)
        .block__content
          +like-button--active(12)
      .block
        h3.block__name Rate button
        .block__content
          +rate-button(4)
          +rate-button(5)
    .top-block-group__tertiary-column
      .block
        h3.block__name Range slider
        .block__content
          +range-slider
      .block.block--button
        h3.block__name Buttons
        .block__content
          +btn-full("Click me")
        .block__content
          +btn-border("Click me")
        .block__content
          +btn-min("Click me")
