//- Все примеси в этом файле должны начинаться c имени блока (date-dropdown)

mixin date-dropdown(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +date-dropdown('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' date-dropdown--' + modsList[i].trim();
      }
    }

  .date-dropdown(class=allMods)&attributes(attributes)
    .date-dropdown__inner
      block
