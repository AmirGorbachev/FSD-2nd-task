//- Все примеси в этом файле должны начинаться c имени блока (filter-date-dropwown)

mixin filter-date-dropwown(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +filter-date-dropwown('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' filter-date-dropwown--' + modsList[i].trim();
      }
    }

  .filter-date-dropwown(class=allMods)&attributes(attributes)
    .filter-date-dropwown__inner
      block
